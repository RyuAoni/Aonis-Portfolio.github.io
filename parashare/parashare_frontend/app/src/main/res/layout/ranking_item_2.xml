<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginBottom="20dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ranking_background_icon"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@drawable/rank_2nd_icon"
            android:scaleType="centerCrop"
            android:contentDescription="ランキングの背景" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:paddingStart="70dp"  android:paddingEnd="16dp">

            <TextView
                android:id="@+id/ranking_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Karagamer"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/noto_sans_jp_semibold"/>

            <TextView
                android:id="@+id/ranking_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="傘の達人"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_vertical"
                android:background="@drawable/rounded_title_background_2"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:fontFamily="@font/noto_sans_jp_semibold"/>
        </LinearLayout>

        <TextView
            android:id="@+id/ranking_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="401NP"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="16dp"
            android:textSize="18sp"
            android:textColor="#000000"
            android:fontFamily="@font/noto_sans_jp_semibold"/>

    </FrameLayout>
</LinearLayout>