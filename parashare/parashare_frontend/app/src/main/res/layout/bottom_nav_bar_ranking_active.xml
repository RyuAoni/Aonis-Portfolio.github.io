<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:background="#FFFFFF"
    android:gravity="center_vertical">

    <!-- ホーム（非アクティブ） -->
    <LinearLayout
        android:id="@+id/home_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/home_icon_grey" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ホーム"
            android:textSize="10sp"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- 傘の記録（非アクティブ） -->
    <LinearLayout
        android:id="@+id/umlog_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/umlog_icon_b" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="旅傘の記録"
            android:textSize="10sp"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- 中央スペース（QR用の丸ボタンは画面側で別配置：QR画面と同じ考え方） -->
    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <!-- ランキング（アクティブ：青） -->
    <LinearLayout
        android:id="@+id/ranking_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/lanking_icon_blue" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ランキング"
            android:textSize="10sp"
            android:textColor="#0062FF" />
    </LinearLayout>

    <!-- マイページ（非アクティブ） -->
    <LinearLayout
        android:id="@+id/mypage_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/youser_icon_b" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="マイページ"
            android:textSize="10sp"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>
