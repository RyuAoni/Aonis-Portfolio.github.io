<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"  android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"  android:background="@drawable/rounded_dialog_background"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A駅前傘立て"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="12dp"/>

    <LinearLayout
        android:layout_width="wrap_content"  android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="4dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/dialog_umbrella_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_umbrella_red"
            android:layout_marginEnd="8dp" />
        <TextView
            android:id="@+id/dialog_umbrella_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="傘本数 : 10/10本 多い"
            android:textColor="@color/black"
            android:textSize="16sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/dialog_move_and_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="移動させると10ナイシェア!"
        android:textColor="#0062FF"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center_horizontal"/>

    <FrameLayout
        android:layout_width="240dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:background="#D3D3D3"
        android:layout_marginBottom="16dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:contentDescription="広告スペース"
            android:padding="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="広告スペース\n(傘立てを置いてくれた人向け)"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_gravity="center"/>
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="店がパラシェアの傘立てを置いてくれたりした場合はこのスペースに店のアピールを書くなどできる"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/dialog_close_button"
        android:layout_width="240dp"  android:layout_height="wrap_content"
        android:text="閉じる"
        android:backgroundTint="#0062FF"
        android:textColor="@color/white"/>

</LinearLayout>