<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="12dp"
    android:background="@drawable/card_background_white"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/text_umbrella_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:text="Izu傘" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/details_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:visibility="gone"
        tools:visibility="visible">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:useDefaultMargins="true">

            <androidx.cardview.widget.CardView style="@style/StatsCard">
                <LinearLayout style="@style/StatsCardContent">
                    <TextView style="@style/StatsLabel" android:text="使用回数" />
                    <TextView style="@style/StatsValue" android:id="@+id/text_usage_count" tools:text="6回" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView style="@style/StatsCard">
                <LinearLayout style="@style/StatsCardContent">
                    <TextView style="@style/StatsLabel" android:text="ナイシェア数" />
                    <TextView
                        android:id="@+id/text_niceshare_count"
                        style="@style/StatsValue"
                        android:textColor="#E53935"
                        tools:text="15" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView style="@style/StatsCard">
                <LinearLayout style="@style/StatsCardContent">
                    <TextView style="@style/StatsLabel" android:text="移動距離" />
                    <TextView style="@style/StatsValue" android:id="@+id/text_distance" tools:text="15.8km" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView style="@style/StatsCard">
                <LinearLayout style="@style/StatsCardContent">
                    <TextView style="@style/StatsLabel" android:text="CO₂削減量" />
                    <TextView style="@style/StatsValue" android:id="@+id/text_co2_reduction" tools:text="250g" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>

        <!-- コメントを見るボタン -->
        <Button
            android:id="@+id/comments_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="コメントを見る"
            android:backgroundTint="#FF9800"
            app:cornerRadius="20dp"
            android:textColor="@color/white" />

        <!-- ★ 追加：コメントの表示領域 -->
        <LinearLayout
            android:id="@+id/comments_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:background="@drawable/card_background_white"
            tools:visibility="visible">

            <!-- 初期は空。読み込み時に TextView を追加していく -->
        </LinearLayout>

        <Button
            android:id="@+id/map_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="マップで見る"
            android:backgroundTint="#5FBE62"
            app:cornerRadius="20dp"
            android:textColor="@color/white" />

    </LinearLayout>
</LinearLayout>
