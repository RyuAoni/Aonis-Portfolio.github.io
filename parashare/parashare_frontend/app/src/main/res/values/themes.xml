<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Parashare" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/noto_sans_jp_semibold</item>
        <item name="fontFamily">@font/noto_sans_jp_semibold</item>
    </style>

    <style name="MyTopButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/your_custom_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="StatsCard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">#FFFFFF</item>
    </style>

    <style name="StatsCardContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="StatsLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#757575</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="StatsValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Parashare.Loading" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>